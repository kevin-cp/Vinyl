{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!{% endblock %}

{% block main %}
    {% if app.request.method == 'POST' %}
        <div>
            {% if products | length == 0 %}
                <h4>Aucun résulat pour votre recherche.</h4>
            {% else %}
                <h3 class="mt-3">Vos résulats de recherche :</h3>
                {% for p in products %}
                    <div class="mt-3 p-3 bg-light border rounded">
                        <a href="{{ path('app_details' , {'id': p.id }) }}">
                            <img src="{{ asset('uploads/') }}{{ p.cover }}" alt="">
                            <h6 class="text-dark"><i class="bi bi-arrow-down-right-square-fill text-primary"></i> {{ p.albumName }}</h6>
                            <div class="text-dark small p-1 rounded">
                               {{ p.author }}
                            </div>
                        </a>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    {% endif %}
{% endblock %}
